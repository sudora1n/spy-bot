global:
  scrape_interval: 15s

scrape_configs:
  - job_name: "business-bot"
    static_configs:
      - targets: ["business-bot:8080"]

  - job_name: "creator-bot"
    static_configs:
      - targets: ["creator-bot:8080"]

  - job_name: "prometheus"
    static_configs:
      - targets: ["localhost:9090"]

  - job_name: "node-exporter"
    static_configs:
      - targets: ["node-exporter:9100"]
